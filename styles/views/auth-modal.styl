.auth-modal
    text-align center
    text-transform none
.auth-modal-inner
    @extend .modal-inner
    max-width 400px
    position relative
    margin 50px auto
    left auto
    top auto
    position relative
    .close-button
        position absolute
        top 10px
        right 10px
        color color-orange
        font-size 2rem
        font-weight 600
        line-height 0
        &:hover
            cursor pointer
