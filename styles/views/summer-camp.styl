challenge_icon(img)
	&.challenge_{img}
		bg-image('summercamp/ch_icons/' + img, 70px 70px, false, no-repeat)

.summer-camp
	.deco-leaves 
		display block
		bg-image("summercamp/header-leaves", 1020px 20px, false, no-repeat)
		width 1020px
		height 20px
		margin-top -20px
	.deco-big-branch 
		display block
		bg-image("summercamp/bigbranch", 256px 162px, false, no-repeat)
		width 256px
		height 162px
		margin -320px -50px auto auto
	.countdown
		padding 80px 0
		background url("/assets/summercamp/wood-asset.png") no-repeat
		background-size contain
		background-position center center
		
		span
			margin 0 10px
			font-size 4em
			font-weight 500
			color #fff
			
			&:first-child
				margin-left 0

			&:last-child
				margin-right 0
		
		.days
			display block
			font-size 6em
			margin-bottom 20px

	div.sc-calendar
		background-color white
		border-radius 5px
		padding 20px
		margin-bottom 250px
		h2
			color black
			text-align center
			margin 0 0 0 0
			padding 20px 0 0 0
			font-weight bold
		h4
			color black
			text-align center
			text-transform uppercase
			font-size 14px
			margin 0
			font-weight bold

	.weekdays_list
		list-style none
		padding 0
		margin 20px 0 0 0

		.weekdays
				box-sizing border-box
				display inline-block
				width 14.2857%
				color color-grey-lighter
				padding 10px 0
				text-align center
				text-transform uppercase
				font-size 0.8rem

				&.current
					color color-grey-darker

	.calendar
		list-style none
		padding 0
		margin  0
		border 3px solid #cecece
		border-radius 3px
		display inline-block
		width 100%
		
		li
			box-sizing border-box
			display inline-block
			width 14.2857%

		.day
			background-color white
			float left

			a
				border 3px solid #A6DA3B
				display block
				position relative
				text-align center
				
				.cover
					position relative
					background-position center 25px
					background-size cover
					background-repeat none
					height 100px
					
					span
						display block
						padding 4px 10px
						position absolute
						left 0
						top 0
						color color-grey
						font-size 1.2rem

					&.unknown
						bg-image('summercamp/ch_icons/question', 70px 70px, false, no-repeat)
					
					for icon in 'campsign' 'location' 'setcamp' 'flag' 'badge' 'fire' 'ghost'
						challenge_icon(icon)
					
				.detail
					padding 10px
					text-align center
				h5
					ellipsis()
					smooth-font()
					width 100%
					font-weight bold
					font-size 15px
					overflow visible
					text-align center
					color color-grey-darker
					padding 0 0 10px 0;

				&.current
					
					&:hover
						background-color color-orange
						border 3px solid color-orange
						border-radius 3px
						h5, span
							color white

					.cover
						opacity .8
				
				&.completed
					bg-image('summercamp/ch_icons/completed', 70px 70px, false, no-repeat)
					background-position center 25px
					
					&:hover
						background-color color-green

				&.locked
					filter(grayscale(100%))
					cursor default
					border 3px solid color-grey
					opacity .3

				&.unlocked
					
					&:hover
						background-color color-orange
						border 3px solid color-orange
						border-radius 3px
						h5, span
							color white

					.cover
						opacity .5

	.challenge-info

		.pic 
			display inline-block
			width 29%
			height 277px
			img 
				border-radius 4px
				height 100%
				width 100%
		.detail
			font-family bariol
			display inline-block
			box-sizing border-box
			width 70%
			vertical-align top
			padding 0px 0 0 25px
			color #ada799
			span.cont-label
				font-size 11px
				margin 10 0 0 0
				display block
				color white
			div
				border none
				margin 10px 0 0 0
				padding 0
			div.btn-container
				display inline-block
				width 45%
				text-align right
				vertical-align top
				padding 18px 0 0 0
			div.rewards-container
				display inline-block
				width 25%
				vertical-align top
				a
					display inline-block
					float left
					width 40px
					height 40px
					margin-right 15px
				a.rew-wallpaper
					bg-image('summercamp/wallpaper', 40px 40px, false, no-repeat)

				a.rew-outfit
					bg-image('summercamp/suit', 40px 40px, false, no-repeat)


			div.diff-container
				display inline-block
				width 25%

				.difficulty-level
					display inline-block
					width 100%
					margin 0 0 20px 0
					padding 0

					span
						display inline-block
						width 40px
						height 40px

						&.l-easy
							bg-image('summercamp/off_easy', 40px 40px, false, no-repeat)

						&.l-medium
							bg-image('summercamp/off_medium', 40px 40px, false, no-repeat)

						&.l-hard
							bg-image('summercamp/off_hard', 40px 40px, false, no-repeat)


					&[data-level="l-1"]
						span
							&.l-easy
								bg-image('summercamp/easy', 40px 40px, false, no-repeat)

					&[data-level="l-2"]
						span
							&.l-medium
								bg-image('summercamp/medium', 40px 40px, false, no-repeat)

					&[data-level="l-3"]
						span
							&.l-hard
								bg-image('summercamp/hard', 40px 40px, false, no-repeat)

			h4
				text-transform uppercase
				font-size 11px
				font-weight normal
				margin 0 0 10px 0
				color #fff

			h3 
				color #fff
				margin 0 0 10px 0
			.description
				p
					font-size 15px
					line-height 22px
					min-height 145px

.modal-register
	h3
		smooth-font()
		font-weight bold
		margin-bottom 20px
		
	input[type='text']
	input[type='password']
	input[type='email']
	input[type='number']
	input[type='tel'],
	input[type='date']
	textarea
		padding 9px 15px
		background color-white
		display inline-block
		border 1px solid color-ruler-contrast
		border-radius()
		font-family type-body-font
		type-size 1.3
		margin-right 0px
		margin-bottom 20px
		box-sizing border-box
		box-shadow 0 2px 0 0 rgba(#000, .03) inset
		
		&:last-child
			margin-right 0
			margin-bottom 0
			
		&:focus
			border 1px solid color-primary
			outline 0
		
		&.block
			width 100%

.workspace-header.success
	background lighten(color-editor-bg, 15)
